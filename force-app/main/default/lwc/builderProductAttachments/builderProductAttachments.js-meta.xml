<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<isExposed>true</isExposed>
    <masterLabel>Custom Product Attachments</masterLabel>
    <description>Displays a list of links to a product's attachments.</description>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Product Data Binding" name="product" type="String" default="{!Product.Details}" />
            <property label="File Icon Color" name="fileIconColor" type="Color" default="rgb(0, 0, 0)" />
            <property label="Open Files In a New Tab" name="openFilesInNewTab" type="Boolean" default="true" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
