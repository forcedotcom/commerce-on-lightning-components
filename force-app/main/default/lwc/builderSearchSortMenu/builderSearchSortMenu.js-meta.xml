<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <masterLabel>Custom Search Sort Menu</masterLabel>
    <description>Displays options for changing the search sort order.</description>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="sortRules" type="String" default="{!Search.SortRules.rules}" />
            <property name="sortRuleId" type="String" default="{!Search.SortRules.currentSortRuleId}" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
